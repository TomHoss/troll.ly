body {
  font-family: helvetica neue;
}

a.btn {
  text-decoration: none;
  color: white;
  background: #00FCFE;
  font-size: 57px;
  font-weight: 700;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
  padding: 10px;
  display: block;
}

a.btn:hover {
  background: #FF00AD;
}

.screen {
  display: none;
  width: 100%;
  height: 100%;
}

.screen.active {
  display: block;
}

#white_noise {
  background: black;
}

.monitor {
  width: 658px;
  height: 449px;
  background-image: url('/monitor.png');
  position: absolute;
  top: 50%;
  margin-top: -225px;
  left: 50%;
  margin-left: -329px;
}

.monitor_screen {
  width: 609px;
  height: 344px;
  margin-left: 25px;
  margin-top: 6px;
}

.white_noise_controller img {
  width: 100%;
  height: 100%;
}

.thumb {
  height: 47px;
}

#snitchy_link {
  font-size: 11px;
  margin-right: 209px;
}

#about_link, #feedback_link {
  font-size: 9.5px;
  color: #0c0c0d;
  margin-right: 10px;
}

nav {
  position: relative;
  top: 377px;
  left: 313px;
}

nav a {
  color: white;
  text-decoration: none;
}

.pink {
  color: #ff00ff;
}

.light_blue {
  color: #00fcff;
}

.grey {
  color: #b5b5b5;
}

.grey-2 {
  color: #9a9a9a;
}

.dark-grey {
  color: #9a9a9a;
}

#progress {
  background-image: url('/SnitchyLoading.gif');
  background-size: cover;
  width: 100%;
  height: 100%;
  color: white;
  text-align: center;
}

@font-face {
  font-family: hgjb;
  src: url('/fonts/hgjb.woff');
}

#progress #text {
  margin-top: 70px;
  display: inline-block;
  font-family: hgjb, helvetica neue;
  font-size: 189px;
}

.bold {
  font-weight: 700;
}

#player {
  margin-left: -3000px;
  position: absolute;
}

.show_snitch_controller img {
  width: 100%;
}

.show_snitch_controller {
  overflow: hidden;
}

#start {
  margin-left: auto;
  margin-right: auto;
  width: 460px;
  margin-top: 139px;
  padding-left: 15px;
  padding-right: 15px;
  line-height: 64px;
}

.header {
  text-align: center;
  color: #00fcff;
  font-size: 57px;
  font-weight: 700;
  margin-top: 24px;
  margin-bottom: -8px;
}

.sub-header {
  text-align: center;
  font-size: 22px;
}

#build_snitch_next {
  text-align: center;
  margin-top: 37px;
  line-height: 62px;
  margin-left: auto;
  margin-right: auto;
  width: 345px;
}

#slides {
  margin-top: 34px;
  min-height: 53px;
  padding-left: 30px;
  padding-right: 30px;
}

.slide-container {
  float: left;
  width: 47px;
  overflow: hidden;
}
